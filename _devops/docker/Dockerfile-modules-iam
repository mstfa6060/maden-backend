FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build


# Copy everything else and build
COPY . /src
WORKDIR /src
RUN dotnet restore
RUN dotnet build

# Test

ARG MODE="DEFAULT"
WORKDIR /src/BaseModules/IAM/BaseModules.IAM.Application.Test
RUN dotnet run || $([ "${MODE}" = "SKIPTEST" ]) 

# Publish
WORKDIR /src/BaseModules/IAM/BaseModules.IAM.Api/
RUN dotnet publish -c release -o /Output --no-restore

# Final stage / image
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /App
COPY --from=build /Output .

RUN apt update && apt install tzdata -y
ENV TZ="Europe/Istanbul"

EXPOSE 8080
ENTRYPOINT ["dotnet", "BaseModules.IAM.Api.dll"]
