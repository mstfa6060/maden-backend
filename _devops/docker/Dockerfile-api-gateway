FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 5000

# Build aÅŸamasÄ±
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# API Gateway projesini ve ocelot.json dosyasÄ±nÄ± kopyala
COPY ../../Gateways/Api/Gateways.ApiGateway.Api ./Gateways.ApiGateway.Api

# ðŸ”¥ ocelot.json dosyasÄ±nÄ± da publish'e dahil etmek iÃ§in ekstra COPY gerekebilir
COPY ../../Gateways/Api/Gateways.ApiGateway.Api/ocelot.json ./Gateways.ApiGateway.Api/ocelot.json

# Restore ve publish iÅŸlemleri
WORKDIR /src/Gateways.ApiGateway.Api
RUN dotnet restore
RUN dotnet publish -c Release -o /app/publish

# Final image
FROM base AS final
WORKDIR /app

# YayÄ±nlanan dosyalarÄ± kopyala
COPY --from=build /app/publish .

