pipeline {
    agent any

    stages {
        stage('Sunucuya Deploy Et') {
            steps {
                withCredentials([
                    sshUserPrivateKey(
                        credentialsId: 'hirovo-server-key',
                        keyFileVariable: 'PEM_KEY'
                    )
                ]) {
                    sh '''
                        echo "🚀 GitHub Actions'dan gelen imaj deploy ediliyor..."
                        ssh -i "$PEM_KEY" -o StrictHostKeyChecking=no root@45.143.4.64 << 'EOF'
                            cd ~/hirovo-api/_devops/docker
                            docker-compose pull
                            docker-compose up -d --build
                        EOF
                    '''
                }
            }
        }

        stage('Tamamlandı') {
            steps {
                echo '✅ DockerHub imajı sunucuya deploy edildi.'
            }
        }
    }

    post {
        success {
            echo '🎉 Deploy pipeline başarıyla tamamlandı.'
        }
        failure {
            echo '❌ Deploy pipeline başarısız oldu.'
        }
    }
}
