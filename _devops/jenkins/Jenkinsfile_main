pipeline {
    agent any

    environment {
        TAG = "${BUILD_NUMBER}-${env.GIT_COMMIT.substring(0, 6)}"
        IMAGE_NAME = "arfblocks-cli"
    }

    stages {
        stage('Sunucuya Deploy Et') {
            steps {
 withCredentials([
                    usernamePassword(
                        credentialsId: 'dockerhub-credentials',
                        usernameVariable: 'USERNAME',
                        passwordVariable: 'PASSWORD'
                    )
                ]) {
                    sh '''
                        echo "🚀 GitHub Actions tarafından DockerHub’a gönderilen imaj sunucuya deploy ediliyor..."

                        ssh -i "$PEM_KEY" -o StrictHostKeyChecking=no $HOST << EOF
                            cd $SERVICE_PATH
                            docker-compose pull
                            docker-compose up -d --build
                        EOF
                    '''
                }
            }
        }

        stage('Tamamlandı') {
            steps {
                echo '✅ DockerHub imajı sunucuya başarıyla deploy edildi.'
            }
        }
    }

    post {
        success {
            echo '🎉 Deploy pipeline başarıyla tamamlandı.'
        }
        failure {
            echo '❌ Deploy pipeline başarısız oldu.'
        }
    }
}
